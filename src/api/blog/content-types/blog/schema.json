{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "main_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "section": {
      "type": "component",
      "component": "section.sections",
      "repeatable": true
    },
    "publish_date": {
      "type": "date",
      "required": true
    },
    "category": {
      "type": "text",
      "required": true
    },
    "meta_description": {
      "type": "text"
    },
    "meta_keywords": {
      "type": "string"
    },
    "author": {
      "type": "component",
      "component": "author.author",
      "repeatable": true,
      "required": true
    }
  }
}
